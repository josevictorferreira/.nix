# Basic Settings
/set weechat.look.mouse on
/set weechat.look.prefix_same_nick "⤷"
/set weechat.look.prefix_align_min 0
/set weechat.look.prefix_align_max 0
/set weechat.look.prefix_join "→"
/set weechat.look.prefix_quit "←"
/set weechat.look.prefix_suffix " "
/set weechat.look.prefix_buffer_align_max 0
/set weechat.look.nick_prefix ""
/set weechat.look.nick_suffix ""
/set weechat.look.align_end_of_lines prefix
/set weechat.look.color_nick_offline yes
/set weechat.look.align_multiline_words on
/set weechat.look.bar_more_down ""
/set weechat.look.bar_more_up ""
/set weechat.look.bar_more_left "…"
/set weechat.look.bar_more_right "…"
/set weechat.look.buffer_notify_default message
/set weechat.look.buffer_time_format "%H:%M"
/set weechat.look.color_inactive_message off
/set weechat.look.color_inactive_prefix off
/set weechat.look.color_inactive_prefix_buffer off
/set weechat.look.color_inactive_window off
/set weechat.look.hotlist_add_conditions "''${away} || ''${buffer.num_displayed} == 0"
/set weechat.look.item_buffer_filter "•"
/set weechat.look.read_marker_string "─"
/set weechat.look.separator_horizontal ""
/set weechat.history.max_buffer_lines_number 1024
/set weechat.buffer.core.weechat.notify 3
/set weechat.buffer.irc.server.*.notify 3

# Bar Settings
/set weechat.bar.input.items "[mode_indicator]+[input_prompt]+(away),[input_search], [input_paste],input_text,[vi_buffer]"
/set weechat.bar.vi_line_numbers.hidden off
/set weechat.bar.nicklist.conditions ""
/set weechat.bar.nicklist.hidden on
/set weechat.bar.title.color_fg white
/set weechat.bar.title.color_bg 56

# Buflist
/set buflist.format.indent "├"

# Color Settings (Tokyo Night Theme)
